{
    "name": "Python Flask App",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "postCreateCommand": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "customizations": {
      "vscode": {
        "settings": {
          "python.defaultInterpreterPath": "venv/bin/python"
        },
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance"
        ]
      }
    }
  }
  